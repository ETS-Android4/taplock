<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/cancel_add_itap"
                android:background="@drawable/ripple_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_back"
                android:drawablePadding="1sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="#FF6464"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:drawableLeft="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#3E5481"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"

                    android:text="1/1"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#9FA5C0"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"
                    android:text="2"/>-->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="32sp"
            android:paddingTop="15dp"
            android:text="Añadir iTap"
            android:textAlignment="center"
            android:textColor="#2E3E5C"
            android:textFontWeight="700"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/inter"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="25sp"
            android:paddingBottom="25dp"

            android:text="Ingrese los datos requeridos"
            android:textAlignment="center"
            android:textColor="#9FA5C0"
            android:textFontWeight="600"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activation_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_security"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="PIN de activación"
            android:textColor="#9FA5C0"
            android:drawableLeft="@drawable/ic_person" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:gravity="left"
            android:lineHeight="17sp"
            android:paddingTop="6dp"
            android:paddingRight="24dp"
            android:text="* Una vez activado, el pin dejará de ser válido y se asociaría permanente mente a esta cuenta."
            android:textColor="#2E3E5C"
            android:textFontWeight="600"
            android:paddingBottom="12dp"
            android:textSize="11sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_home_work"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Nombre del local/propiedad"
            android:textColor="#9FA5C0"
            android:drawableLeft="@drawable/ic_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter"
            android:gravity="left"
            android:lineHeight="17sp"
            android:paddingTop="6dp"
            android:paddingRight="24dp"
            android:text="Introduzca un nombre que le facilite identificar el iTap. (Recomendamos el nombre del local/propiedad)"
            android:textColor="#2E3E5C"
            android:textFontWeight="600"
            android:paddingBottom="12dp"
            android:textSize="11sp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Dirección del local"
            android:textColor="#9FA5C0"
            android:drawableLeft="@drawable/ic_smartphone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/remember_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"


            android:fontFamily="@font/inter"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="25sp"

            android:text="¿No tienes el PIN de activación?"
            android:textAlignment="center"
            android:textColor="#2E3E5C"
            android:textFontWeight="600"
            android:textSize="15sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text=""
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@android:color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_to_step_two"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Añadir"
            android:textColor="@color/white"
            android:background="@drawable/ripple_effect_raised"/>

        <!--android:backgroundTint="#1FCC79"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:lineHeight="25sp"

                android:text="¿No tienes iTap?"
                android:textAlignment="center"
                android:textColor="#2E3E5C"
                android:textFontWeight="600"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:lineHeight="25sp"

                android:text="Comprar nuevo iTap"
                android:textAlignment="center"
                android:textColor="#1FCC79"
                android:textFontWeight="600"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>