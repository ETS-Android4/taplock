<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="370dp"
    android:layout_height="530dp"
    android:background="#F4F5F7"
    android:padding="20dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineHeight="18sp"
        android:paddingTop="10dp"
        android:text="Verificar datos"
        android:textColor="#2E3E5C"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_bd"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="El nuevo usuario se añadira con la siguiente información:"
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Nombre: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_user_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Móvil: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_add_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="17sp"
                android:text="Está seguro de que quiere añadir a este usuario? "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:id="@+id/text_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hide_04"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_bd"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="Los usuarios deberan tener descargada la aplicación oficial TapLock, se puede encontrar en la PlayStore "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="Puede enviar el enlace directo de descarga presionando el siguiente botón."
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <!--<androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_step_pop_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ripple_effect_raised"
        android:text="Enviar ahora"
        android:textColor="@color/white"
        android:visibility="gone"/>-->

    <LinearLayout
        android:id="@+id/hide_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_01"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/_continue_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square"
            android:letterSpacing="0.05"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_user_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square"
            android:letterSpacing="0.05"
            android:text="Sí"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="visible"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_user_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square"
            android:letterSpacing="0.05"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_02">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_user_play_store_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square_maingreen"
            android:letterSpacing="0.05"
            android:text="Enviar enlace"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/loading_layout_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>