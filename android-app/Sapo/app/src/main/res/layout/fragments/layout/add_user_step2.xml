<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="370dp"
    android:layout_height="530dp"
    android:background="#F4F5F7"
    android:padding="20dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineHeight="18sp"
        android:paddingTop="10dp"
        android:text="Enviar enlace"
        android:textColor="#2E3E5C"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_bd"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="Debe enviar el enlace al usuario para que lo pueda vincular a su movil;"
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_01"
        android:layout_gravity="left"
        android:layout_marginTop="-170dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="left"
        android:letterSpacing="0.02"
        android:lineHeight="18dp"
        android:text="lkajsdlkasd90'8"
        android:textColor="#2a3d66"
        android:textFontWeight="700"
        android:textSize="13.2dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/layout_02"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_01">

        <TextView
            android:id="@+id/token"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="14dp"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:layout_gravity="left"
            android:fontFamily="@font/inter_bold"
            android:gravity="left"
            android:letterSpacing="0.02"
            android:lineHeight="18dp"
            android:text="-"
            android:textColor="#2a3d66"
            android:textFontWeight="700"
            android:textSize="13.2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/copy_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:lineHeight="18dp"
            android:text="COPIAR!"
            android:textColor="@color/darkblue"
            android:textFontWeight="700"
            android:textSize="13.2dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_02"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_bd"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="路 Puede enviar el enlace ahora, o en otro momento accediendo al usuario desde la lista de usuarios."
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="路 Puede enviar el codigo ilimitadamente."
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="路 Una vez el enlace haya sido vinculado a un mobil y se haya utilizado por primera vez, caducara. (No se podra volver a utilizar mas)"
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="18dp"
                android:text="路 Si el usuario pierde el movil, lo roban, lo formatea de fabrica... se debera enviar un nuevo enlace (agotar 1 eKey)"
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!--<androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_step_pop_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ripple_effect_raised"
        android:text="Enviar ahora"
        android:textColor="@color/white"
        android:visibility="gone"/>-->

    <LinearLayout
        android:id="@+id/hide_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square"
            android:letterSpacing="0.05"
            android:text="Mas tarde"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/ripple_effect_square_maingreen"

            android:letterSpacing="0.05"
            android:text="Enviar ahora"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <RelativeLayout

        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>