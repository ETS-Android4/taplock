<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="370dp"
    android:layout_height="418dp"
    android:background="#F4F5F7"
    android:padding="20dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineHeight="18sp"
        android:paddingTop="10dp"
        android:text="Verificar datos"
        android:textColor="#2E3E5C"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_bd"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Nombre iTap: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Dirección iTap: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Unidades (eKeys): "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Precio por unidad: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/individual_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="€"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Subtotal: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="€"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="IVA (21%): "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13.4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="€"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="Costes de gestión (1,4%): "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13.4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="€"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="PRECIO FINAL: "
                android:textColor="#2a3d66"
                android:textFontWeight="700"
                android:textSize="13.2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/final_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="-"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13.4dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:letterSpacing="0.02"
                android:lineHeight="32sp"
                android:text="€"
                android:textColor="#4c9173"
                android:textFontWeight="700"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_step_2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ripple_effect_raised"
        android:text="Continuar (2/3)"
        android:textColor="@color/white" />

</RelativeLayout>