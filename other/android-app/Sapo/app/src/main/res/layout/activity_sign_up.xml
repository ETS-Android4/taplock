<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup.SignUp">

    <LinearLayout
        android:id="@+id/layout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_bold"

            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="32sp"
            android:paddingTop="75dp"
            android:text="¡Crear cuenta!"

            android:textAlignment="center"
            android:textColor="#2E3E5C"
            android:textFontWeight="700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/inter"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineHeight="25sp"
            android:paddingBottom="32dp"

            android:text="Ingrese los datos requeridos aquí."
            android:textAlignment="center"
            android:textColor="#9FA5C0"
            android:textFontWeight="600"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Nombre completo"
            android:textColor="#9FA5C0"
            android:drawableLeft="@drawable/ic_person" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_smartphone"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="number"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Número de móvil"
            android:textColor="#9FA5C0"
            android:drawableLeft="@drawable/ic_smartphone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_message"
            android:drawableLeft="@drawable/ic_message"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPersonName"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Email"
            android:textColor="#9FA5C0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"
            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"
            android:hint="Contraseña"
            android:textColor="#9FA5C0"
            android:drawableRight="@drawable/ic_pwd_visibility_off"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"

            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10sp"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:inputType="textPassword"

            android:lineHeight="18sp"
            android:textFontWeight="500"
            android:textSize="15sp"

            android:hint="Repita la contraseña"
            android:textColor="#9FA5C0"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <CheckBox
            android:id="@+id/terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:textStyle="bold"
            android:text="Acepto los Términos del Servicio y la Politica de Privacidad."
            android:padding="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text=""
            android:visibility="visible"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@android:color/white"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignUpBtn"
            android:layout_width="match_parent"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_height="56dp"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            android:letterSpacing="0.04"
            android:textSize="15dp"
            android:text="Siguiente ->"
            android:textColor="@color/white"
            android:background="@drawable/ripple_effect_raised"/>

        <!--android:backgroundTint="#1FCC79"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:fontFamily="@font/inter"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:lineHeight="25sp"

                android:text="¿Ya tienes cuenta?"
                android:textAlignment="center"
                android:textColor="#2E3E5C"
                android:textFontWeight="600"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/ripple_effect_text"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.04"
                android:lineHeight="25sp"
                android:onClick="open_sign_in"

                android:text="Iniciar Sesión"
                android:textAlignment="center"
                android:textColor="#1FCC79"
                android:textFontWeight="600"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout

        android:id="@+id/loading_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/loading"
        android:elevation="10dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/cancel_add_itap"
                android:background="@drawable/ripple_effect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_back"
                android:onClick="open_sign_in"
                android:drawablePadding="1sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="#FF6464"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:drawableLeft="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#3E5481"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"

                    android:text="1/"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#9FA5C0"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:lineHeight="500dp"
                    android:letterSpacing="0.05"
                    android:gravity="right"
                    android:text="2"/>

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>


</RelativeLayout>



