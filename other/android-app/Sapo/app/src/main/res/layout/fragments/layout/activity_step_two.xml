<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"    android:focusable="true" android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/come_back"
            android:background="@drawable/ripple_effect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_back"
            android:drawablePadding="1sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="#FF6464"
            android:textStyle="bold"
            android:textSize="16dp"
            android:lineHeight="500dp"
            android:letterSpacing="0.05"
            android:drawableLeft="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textColor="#3E5481"
                android:textStyle="bold"
                android:textSize="16dp"
                android:lineHeight="500dp"
                android:letterSpacing="0.05"
                android:gravity="right"

                android:text="2/2"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.02"
        android:lineHeight="32sp"
        android:paddingTop="20dp"
        android:text="Añadir iTap"
        android:textAlignment="center"
        android:textColor="#2E3E5C"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/inter"
        android:gravity="center_horizontal"
        android:letterSpacing="0.02"
        android:lineHeight="25sp"
        android:paddingBottom="35dp"
        android:text="Datos de identificación"
        android:textAlignment="center"
        android:textColor="#9FA5C0"
        android:textFontWeight="600"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_home_work"
        android:drawablePadding="10sp"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:inputType="textPersonName"

        android:lineHeight="18sp"
        android:textFontWeight="500"
        android:textSize="15sp"

        android:hint="Nombre del local/propiedad"
        android:textColor="#9FA5C0"
        android:drawableLeft="@drawable/ic_person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/inter"
        android:gravity="left"
        android:lineHeight="17sp"
        android:paddingTop="6dp"
        android:paddingRight="24dp"
        android:text="Introducza un nombre que le facilite identificar el iTap facilmente. (Recomendamos el nombre del local/propiedad)"
        android:textColor="#2E3E5C"
        android:textFontWeight="600"
        android:paddingBottom="3dp"
        android:textSize="11sp"
        android:textStyle="bold"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/white"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="10sp"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:inputType="textPersonName"

        android:lineHeight="18sp"
        android:textFontWeight="500"
        android:textSize="15sp"

        android:hint="Dirección"
        android:textColor="#9FA5C0"
        android:drawableLeft="@drawable/ic_smartphone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:background="@android:color/white"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20px"
        android:id="@+id/go_to_step_two"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:text="Finalizar y Activar"
        android:textColor="@color/white"
        android:background="@drawable/ripple_effect_raised"/>

    <!--android:backgroundTint="#1FCC79"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"/>




</LinearLayout>